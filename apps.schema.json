{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://hardikyp.github.io/browser-homepage/apps.schema.json",
  "title": "Homepage App Links",
  "type": "object",
  "additionalProperties": false,
  "required": ["apps"],
  "properties": {
    "apps": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "url", "icon"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Display name shown below the icon"
          },
          "url": {
            "type": "string",
            "minLength": 1,
            "description": "Destination URL (http/https/local hostnames)"
          },
          "icon": {
            "type": "string",
            "minLength": 1,
            "description": "Relative icon path, e.g. icons/app.svg"
          },
          "openInNewTab": {
            "type": "boolean",
            "default": true,
            "description": "When false, opens in current tab"
          }
        }
      }
    }
  }
}
